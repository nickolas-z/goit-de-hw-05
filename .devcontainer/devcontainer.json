{
    "name": "spark-dev",
    "build": {
        "dockerfile": "./Dockerfile",
        "args": {
            "USER_UID": "1000",
            "USER_GID": "1000"
        }
    },
    "remoteUser": "spark",
    "workspaceFolder": "/workspaces",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    "forwardPorts": [4040, 4041, 8080, 7077, 8888],
    "portsAttributes": {
        "4040": {"label": "Spark UI"},
        "4041": {"label": "Spark UI (alt)"},
        "8080": {"label": "Spark Master UI"},
        "7077": {"label": "Spark Master Port"},
        "8888": {"label": "Jupyter Notebook"}
    },
    "postCreateCommand": "python -m pip install --upgrade pip"
}